<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:orientation="vertical"

    >
  <EditText
      android:layout_alignParentTop="true"
      android:layout_centerHorizontal="true"
      android:layout_width="250dp"
      android:layout_height="50dp"
      android:layout_marginTop="120dp"
      android:gravity="center"
      android:id="@+id/reg_username"
      android:inputType="textEmailAddress"
      android:hint="Email ID"
      android:textStyle="italic"
      />

    <EditText
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/reg_username"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:inputType="textPassword"
        android:hint="PassWord"
        android:fontFamily="sans-serif"
        android:textStyle="italic"
        android:id="@+id/reg_password"
        />

    <EditText
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/reg_password"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:textStyle="italic"
        android:gravity="center"
        android:inputType="textPassword"
        android:hint="Retype PassWord"
        android:id="@+id/reg_repassword"
        />


    <Button
        android:layout_centerHorizontal="true"
        android:id="@+id/register_button"
        android:layout_below="@+id/reg_repassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"
        android:onClick="register"
        android:textStyle="bold"
        />
    <Button
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/register_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@null"
        android:text=" Already have an account ? Login here "
        android:textColor="@color/mahi"
        android:onClick="loginpage"
        />

  <ImageView
      android:id="@+id/imageView"
      android:layout_marginLeft="10dp"
      android:layout_width="50dp"
      android:layout_height="50dp"
      android:layout_alignParentStart="true"
      android:layout_alignTop="@+id/reg_username"
      android:src="@drawable/mail" />

  <ImageView
      android:id="@+id/imageView2"
      android:layout_width="50dp"
      android:layout_height="50dp"
      android:layout_alignStart="@+id/imageView"
      android:layout_alignTop="@+id/reg_password"
      android:src="@drawable/padlock" />

  <ImageView
      android:id="@+id/imageView3"
      android:layout_width="50dp"
      android:layout_height="50dp"
      android:layout_alignStart="@+id/imageView"
      android:layout_alignTop="@+id/reg_repassword"
      android:src="@drawable/rpadlock" />

  <ImageView
      android:id="@+id/imageView5"
      android:layout_width="75dp"
      android:layout_height="75dp"
      android:layout_marginTop="20dp"
      android:layout_alignParentTop="true"
      android:layout_centerHorizontal="true"
      app:srcCompat="@drawable/account" />


</RelativeLayout>

